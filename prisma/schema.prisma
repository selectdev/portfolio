generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPosts {
  id                Int            @id @default(autoincrement())
  title             String
  image             String?
  author            BlogPostAuthor @relation(fields: [blogPostAuthorId], references: [id])
  blogPostAuthorId  Int
  short_description String
  long_description  String
  createdAt         DateTime       @default(now())
  updatedAt         DateTime?
  flairs            String[]
}

model BlogPostAuthor {
  id        Int         @id @default(autoincrement())
  name      String
  biography String
  image     String
  badges    String[]
  posts     BlogPosts[]
}
